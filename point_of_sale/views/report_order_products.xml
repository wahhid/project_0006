<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_orderproducts">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Order of Products</h2>
                
                <div class="row mb32">
                    <div class="col-xs-3">
                        <strong>Start Period</strong>:<br/>
                        <span t-esc="formatLang(data['form']['date_start'],date=True)"/> 
                    </div>
                    <div class="col-xs-3">
                        <strong>End Period</strong>:<br/>
                        <span t-esc="formatLang(data['form']['date_end'],date=True)"/> 
                    </div>
                </div>
                
                <div t-foreach="selected_product(data['form'])" t-as="product_ids">
                	<span t-esc="product_ids['id']"/>
                </div>

            </div>
        </t>
    </t>
</template>
</data>
</openerp>
